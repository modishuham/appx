<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorDisabled</item>
        <item name="colorControlNormal">@color/colorDisabled</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/app_text_size</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/app_text_size</item>
    </style>

    <style name="HelperText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/app_text_size</item>
    </style>

    <style name="buttonStyle" >
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>


</resources>
